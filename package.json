{
  "name": "pacman-lab",
  "version": "1.0.0",
  "description": "A platform for studying Pacman game algorithms and AI behavior",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "test:python": "pytest tests/algorithms -v"
  },
  "keywords": [
    "pacman",
    "maze",
    "pathfinding",
    "ai",
    "algorithms"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "mongodb-memory-server": "^9.1.5"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server/index.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}

